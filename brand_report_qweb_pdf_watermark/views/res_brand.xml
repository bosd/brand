<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_brand_form" model="ir.ui.view">
        <field name="model">res.brand</field>
        <field name="inherit_id" ref="brand.res_brand_form_view" />
        <field name="arch" type="xml">
            <field name="external_report_layout_id" position="after">
                <group name="pdf_watermark">
                    <br />
                    <field
                        name="pdf_watermark"
                        widget="pdf_viewer"
                        help="Upload an pdf file to use as an brand specific watermark. You need to activate the setting 'use brand watermark' on the reports where you want to use it."
                    />
                </group>
            </field>
        </field>
    </record>
</odoo>
